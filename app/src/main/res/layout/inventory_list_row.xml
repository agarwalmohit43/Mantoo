<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/inventory_Name_Display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Inventory Name" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/inventory_Tax_Display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Tax" />

            <TextView
                android:id="@+id/inventory_GST_Display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/inventory_Tax_Display"
                android:layout_alignBottom="@+id/inventory_Tax_Display"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="69dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="GST Rate" />
        </RelativeLayout>

        <TextView
            android:id="@+id/inventory_Rate_Display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Rate" />

        <TextView
            android:id="@+id/inventory_MRp_Display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="MRP" />

        <TextView
            android:id="@+id/inventory_purPrice_Display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Purchase Price" />


    </LinearLayout>

</android.support.v7.widget.CardView>